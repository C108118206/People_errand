<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="people_errandd.Views.LoginPage"
             xmlns:st="clr-namespace:Plugin.SharedTransitions;assembly=Plugin.SharedTransitions"
             BackgroundColor="White">
    <!--內容樣式設定-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="title" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="40" />
                <Setter Property="Margin" Value="40,120,0,0" />
            </Style>
            <Style x:Key="image" TargetType="Image">
                <Setter Property="HeightRequest" Value="80" />
                <Setter Property="Margin" Value="20,90,0,0" />
            </Style>
            <Style x:Key="content" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="Margin" Value="50,50,-40,0" />
            </Style>
            <Style x:Key="entry" TargetType="Entry">
                <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="10,0,0,0" />
                <Setter Property="WidthRequest" Value="280" />
                <Setter Property="FontSize" Value="15" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>
            <Style x:Key="Button" TargetType="Button">
                <Setter Property="WidthRequest" Value="285" />
                <Setter Property="CornerRadius" Value="40" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,50,0,20" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="BackgroundColor" Value="#DAE9F4" />
                <Setter Property="Opacity" Value="0.8" />
            </Style>
            <Style x:Key="Question" TargetType="Button">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="BackgroundColor" Value="#263959" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <!--內容樣式設定結束-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout
            x:Name="RootContainer"
            Margin="0,0,0,-800"
            BackgroundColor="White"
            Spacing="0">
            <!--設置背景深藍色-->
            <Frame
                x:Name="transition"
                WidthRequest="10000"
                Margin="0,-40,0,0"
                Padding="0,40,0,24"
                BackgroundColor="#263959"
                CornerRadius="40">

                <ScrollView HeightRequest="550">
                    <StackLayout Orientation="Vertical">
                        <StackLayout Orientation="Horizontal" Grid.Row="0">
                            <Label Text="Punch." Style="{StaticResource title}"></Label>
                            <!--Punch標題-->
                            <Image x:Name="image" Source="teamworker" Style="{StaticResource image}"></Image>
                            <!--Punch右邊圖片-->
                        </StackLayout>
                        <StackLayout Orientation="Vertical" Grid.Row="1">
                            <Label Text="組織ID" Style="{StaticResource content}" Grid.Row="0"/>
                            <!--組織ID標題-->
                            <Frame CornerRadius="10" Padding="0" Margin="0,5,0,0" HorizontalOptions="Center" WidthRequest="260" >
                                <Entry x:Name="company" Placeholder=" 請輸入組織ID" Style="{StaticResource entry}" Grid.Row="1" TextColor="Black" />
                            </Frame>
                            <!--輸入組織ID-->
                            <Button x:Name="button" Text="登入" Style="{StaticResource Button}" Clicked="LogInButton" Grid.Row="2" />
                            <!--登入按鈕-->
                            <Button  Text="如何使用" x:Name="question" Style="{StaticResource Question}" Clicked="QuestionButton" Grid.Row="3" />
                            <Button  Text="繼承資料" x:Name="Test"  Style="{StaticResource Question}" Clicked="Test_Clicked"  Grid.Row="4" />
                            <!--如何使用之快顯示窗-->
                        </StackLayout>
                    </StackLayout>
                </ScrollView>

            </Frame>
        </StackLayout>

