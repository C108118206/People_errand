<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="people_errandd.Views.LoginPage"
             BackgroundColor="White"
             >
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="title" TargetType="Label">
                <Setter Property="TextColor" Value="#263959" />
                <Setter Property="FontSize" Value="40" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="40,160,0,0"/>
            </Style>
            <Style x:Key="image" TargetType="Image">
                <Setter Property="Margin" Value="30,150,0,0" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
            <Style x:Key="entrytitle" TargetType="Label">
                <Setter Property="TextColor" Value="#263959" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="50,60,0,-20"/>
            </Style>
            <Style x:Key="entry" TargetType="Entry">
                <Setter Property="WidthRequest" Value="280" />
                <Setter Property="Margin" Value="50,0,50,0"/>
                <Setter Property="HeightRequest" Value="80" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="TextColor" Value="#7F7B7B" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
            </Style>
            <Style x:Key="Sign in" TargetType="Label">
                <Setter Property="TextColor" Value="#263959" />
                <Setter Property="FontSize" Value="40" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="40,50,0,0"/>
            </Style>
            <Style x:Key="Button" TargetType="Button">
                <Setter Property="Margin" Value="90,40,0,0" />
                <Setter Property="BackgroundColor" Value="#263959"/>
                <Setter Property="VerticalOptions" Value="End"/>
                <Setter Property="HorizontalOptions" Value="End"/>
                <Setter Property="HeightRequest" Value="80"/>
                <Setter Property="WidthRequest" Value="80"/>
                <Setter Property="CornerRadius" Value="80"/>
            </Style>
            <Style x:Key="Question" TargetType="Button">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="TextColor" Value="#263959" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Margin" Value="30,-5,0,0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
