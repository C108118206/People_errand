<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="people_errandd.Views.MainpageeDetail"
             BackgroundColor="#9BAEC8">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonDown" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#353866" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="HorizontalOptions" Value="End" />
                <Setter Property="HeightRequest" Value="110" />
                <Setter Property="WidthRequest" Value="50" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="Margin" Value="0,-50,10,0"/>
            </Style>
            <Style x:Key="Button" TargetType="Button">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="HeightRequest" Value="120" />
                <Setter Property="WidthRequest" Value="120" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="Margin" Value="10,10" />
                <Setter Property="BorderColor" Value="#E6E6E6" />
            </Style>
            <Style x:Key="ButtonText" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>

        <Grid BackgroundColor="#8CC5D7">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- <ScrollView>  -->
            <StackLayout Orientation="Vertical" >
                <Frame BackgroundColor="#EFEFEF" WidthRequest="900" HeightRequest="1500" CornerRadius="30" Margin="0,50,0,-800">

                    <StackLayout Orientation="Vertical" HorizontalOptions="Center" Margin="0,20,0,0">
                        <Button Grid.Row="0" Text="↓" FontSize="45" Style="{StaticResource ButtonDown}"  Clicked="GoBackButton"></Button>

                        <StackLayout Margin="0,8,0,0">
                            <StackLayout Grid.Row="1" Orientation="Horizontal">
                                <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Button ImageSource="worker.png" Style="{StaticResource Button}" Clicked="GoToWork"></Button>
                                    <Label Text="上班" Style="{StaticResource ButtonText}"></Label>
                                </StackLayout>
                                <StackLayout  Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                                    <Button Opacity="0.2" ImageSource="workeroff.png" Style="{StaticResource Button}" Clicked="OffWork"></Button>
                                    <Label Opacity="0.2" Text="下班" Style="{StaticResource ButtonText}"></Label>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Grid.Row="2" Orientation="Horizontal">
                            <StackLayout  Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                                <Button ImageSource="goouttt.png" Style="{StaticResource Button}" Clicked="GoOutButton">
                                </Button>
                                <Label Text="公出" Style="{StaticResource ButtonText}"></Label>
                            </StackLayout>
                            <StackLayout  Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                                <Button ImageSource="nerd.png" Style="{StaticResource Button}" Clicked="GoTakeDayOffButton">
                                </Button>
                                <Label Text="請假" Style="{StaticResource ButtonText}"></Label>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Grid.Row="3" Orientation="Horizontal">
                            <StackLayout Grid.Row="0" Grid.Column="0"  HorizontalOptions="Center">
                                <Button ImageSource="schedule3.png" Style="{StaticResource Button}" Clicked="GoClassScheduleButton">
                                </Button>
                                <Label Text="班表" Style="{StaticResource ButtonText}"></Label>
                            </StackLayout>
                            <StackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                                <Button ImageSource="note4.png" Style="{StaticResource Button}" Clicked="GoRecordButton"></Button>
                                <Label Text="紀錄" Style="{StaticResource ButtonText}"></Label>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>