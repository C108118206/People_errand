<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="people_errandd.Views.MainPage"
             BackgroundColor="#8CC5D7">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="name" TargetType="Label">
                <Setter Property="FontFamily" Value="Chalkduster" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="30" />
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
            <Style x:Key="statusframe" TargetType="Frame">
                <Setter Property="Opacity" Value="0.8" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="WidthRequest" Value="80" />
                <Setter Property="Padding" Value="25,8,25,8" />
                <Setter Property="HasShadow" Value="True" />
            </Style>
            <Style x:Key="gpsframe" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#98E4AA" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Opacity" Value="0.8" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="WidthRequest" Value="200" />
                <Setter Property="HeightRequest" Value="25" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,20,0,20" />
                <Setter Property="Padding" Value="20,10,20,10" />
            </Style>
            <Style x:Key="button" TargetType="Button">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="HeightRequest" Value="120" />
                <Setter Property="WidthRequest" Value="120" />
                <Setter Property="Margin" Value="10,10" />
                <Setter Property="BorderColor" Value="#E6E6E6" />
            </Style>
            <Style x:Key="text" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="TextColor" Value="Black" />
            </Style>
            <Style x:Key="warning" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="CharacterSpacing" Value="2" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Margin" Value="0,20,0,0" />
            </Style>
            <Style x:Key="warningframe" TargetType="Frame">
                <Setter Property="WidthRequest" Value="380" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,0,0,20" />
                <Setter Property="Padding" Value="0,0,0,20" />
                <Setter Property="BackgroundColor" Value="Black" />
                <Setter Property="Opacity" Value="0.8" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ContentPage.Content>
        <Grid  BackgroundColor="#8CC5D7">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackLayout Orientation="Vertical" >
                <StackLayout  Margin="20,20,0,0" Grid.Row="0"  Orientation="Horizontal" HorizontalOptions="Start" VerticalOptions="Start">
                    <Frame BackgroundColor="#98E4AA" Style="{StaticResource statusframe}">
                        <!--下班 #F86954-->
                    <Label x:Name="status" Text=""  Style="{StaticResource text}" />
                    </Frame>
                </StackLayout>
                <StackLayout Grid.Row="1" Margin="0,10,0,0" VerticalOptions="Center" HorizontalOptions="Center" Orientation="Horizontal" >
                    <Frame 
                           BorderColor="Black"
                           CornerRadius="50"
                           HeightRequest="60"
                           WidthRequest="60"
                           IsClippedToBounds="True"
                         >
                        <ImageButton Source="p2.png"
                             Clicked="AboutPageButton"
                             Aspect="AspectFill"
                             Margin="-20"
                             WidthRequest="20" />
                    </Frame>
                </StackLayout>
                <Label x:Name="username" Text="Marry" Grid.Row="2" Style="{StaticResource name}" ></Label>
                <Frame Grid.Row="3" Style="{StaticResource gpsframe}">
                    <StackLayout Orientation="Horizontal">
                        <Image Source="GPS" />
                        <Label
                       Margin="30,0,0,0"
                            x:Name="GPSText"
                         Text="定位已開啟"
                            Style="{StaticResource text}">
                    </Label>
                    </StackLayout>
                </Frame>
                <Frame BackgroundColor="#EFEFEF" WidthRequest="1000" HeightRequest="500" CornerRadius="30"  Margin="0,0,0,-200">

                    <StackLayout Orientation="Vertical" HorizontalOptions="Center" Margin="0,10,0,0">
                        <StackLayout Grid.Row="4" Orientation="Horizontal">
                            <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                                <Button x:Name="workOn" ImageSource="worker.png" Style="{StaticResource button}" Clicked="GoToWork"></Button>
                                <Label x:Name="workOnText" Text="上班" Style="{StaticResource text}"></Label>
                            </StackLayout>
                            <StackLayout Grid.Row="0" Grid.Column="1">
                                <Button x:Name="workOff" Opacity="0.2" ImageSource="workeroff.png" Style="{StaticResource button}" Clicked="OffWork"></Button>
                                <Label  x:Name="workOffText" Text="下班" Style="{StaticResource text}"></Label>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Grid.Row="5"  Orientation="Horizontal">
                            <StackLayout  Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                                <Button ImageSource="goouttt.png" Style="{StaticResource button}" Clicked="GoOutButton"></Button>
                                <Label Text="公出" Style="{StaticResource text}"></Label>
                            </StackLayout>
                            <StackLayout Grid.Row="0" Grid.Column="1">
                                <Button ImageSource="more1"  Style="{StaticResource button}" Clicked="DetailButton"></Button>
                                <Label Text="更多" Style="{StaticResource text}"></Label>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Frame>
                <Frame x:Name="FrameConnection" Opacity="0" Style="{StaticResource warningframe}">
                    <Label x:Name="LabelConnection" Opacity="0" Text="No Internet Connection" Style="{StaticResource warning}"></Label>
                </Frame>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>