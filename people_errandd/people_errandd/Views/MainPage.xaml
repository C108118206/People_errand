<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="people_errandd.Views.MainPage"
             xmlns:st="clr-namespace:Plugin.SharedTransitions;assembly=Plugin.SharedTransitions"
             BackgroundColor="#8CC5D7">
    <!--內容樣式設定-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="name" TargetType="Label">
                <Setter Property="FontFamily" Value="Chalkduster" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="30" />
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
            <Style x:Key="statusframe" TargetType="Frame">
                <Setter Property="Opacity" Value="0.8" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="WidthRequest" Value="80" />
                <Setter Property="Padding" Value="10,8,10,8" />
                <Setter Property="HasShadow" Value="True" />
            </Style>
            <Style x:Key="gpsbutton" TargetType="Button">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="BackgroundColor" Value="#98E4AA"/>
                <Setter Property="Margin" Value="0,20,0,20"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Padding" Value="30,10,30,10"/>
                <Setter Property="WidthRequest" Value="250"/>
                <Setter Property="HeightRequest" Value="50"/>
            </Style>
            <Style x:Key="buttonframe" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="HeightRequest" Value="140" />
                <Setter Property="WidthRequest" Value="140" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="Padding" Value="-10" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
            <Style x:Key="button" TargetType="Button">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="HeightRequest" Value="120" />
                <Setter Property="WidthRequest" Value="120" />
                <Setter Property="Margin" Value="10,10" />
            </Style>
            <Style x:Key="text" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="TextColor" Value="Black" />
            </Style>
            <Style x:Key="warning" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="CharacterSpacing" Value="2" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Margin" Value="0,20,0,0" />
            </Style>
            <Style x:Key="warningframe" TargetType="Frame">
                <Setter Property="WidthRequest" Value="380" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,0,0,20" />
                <Setter Property="Padding" Value="0,0,0,20" />
                <Setter Property="BackgroundColor" Value="Black" />
                <Setter Property="Opacity" Value="0.8" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <!--內容樣式設定結束-->

    <ContentPage.Content >
        <Grid  BackgroundColor="#8CC5D7"  >
            <!--背景顏色-->

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackLayout Orientation="Vertical" >
                <StackLayout  Margin="20,20,0,0" Grid.Row="0"  Orientation="Horizontal" HorizontalOptions="Start" VerticalOptions="Start" x:Name="transition" >
                    <!--左上工作狀態框架-->
                    <Frame BackgroundColor="#98E4AA" Style="{StaticResource statusframe}" x:Name="statusBack" >
                        <!--左上工作狀態背景-->
                        <Label x:Name="status" Text="上班中"  Style="{StaticResource text}" />
                        <!--左上工作狀態文字-->
                    </Frame>
                </StackLayout>
                <Button ImageSource="messenger" HorizontalOptions="End" WidthRequest="30" HeightRequest="30" Margin="0,-40,20,0" BackgroundColor="#8CC5D7" Clicked="ColleagueButton" />
                <StackLayout Grid.Row="1" Margin="0,10,0,0" VerticalOptions="Center" HorizontalOptions="Center" Orientation="Horizontal" >
                    <!--頭貼框架-->
                    <!--圓形頭貼邊框-->
                    <Frame 
                           BorderColor="Black"
                           CornerRadius="50"
                           HeightRequest="60"
                           WidthRequest="60"
                           IsClippedToBounds="True"
                         >
                        <!--圓形頭貼(點擊後換頁至aboutpage)-->
                        <ImageButton 
                             st:Transition.Name="transitionAboutPage"
                             Source="p2.png"
                             Clicked="AboutPageButton" 
                             Aspect="AspectFill"
                             Margin="-20"
                             WidthRequest="20" />
                    </Frame>
                </StackLayout>
                <Label x:Name="username" Text="Marry" Grid.Row="2" Style="{StaticResource name}" ></Label>
                <!--使用者姓名-->
                <!--gps定位狀態-->
                <!--
                <Frame  Style="{StaticResource gpsframe}">
                    <StackLayout Orientation="Horizontal">
                        <Image Source="gps.png" />
                        <Label
                            Margin="30,0,0,0"
                            x:Name="GPSText"
                            Text="定位已開啟"
                            Style="{StaticResource text}"
                            >
                        </Label>
                    </StackLayout>
                </Frame>
            -->
                <Button ImageSource="gps1" Grid.Row="3" Text="定位已開啟" Style="{StaticResource gpsbutton}"  x:Name="GPSText"/>
                <Frame   BackgroundColor="#EFF1F8" WidthRequest="1000" HeightRequest="500" CornerRadius="30"  Margin="0,0,0,-200">
                    <!--底部白色背景開始-->
                    <StackLayout Orientation="Vertical" HorizontalOptions="Center" Margin="0,10,0,0">
                        <StackLayout Grid.Row="4" Orientation="Horizontal">
                            <!--上班.下班水平放置-->
                            <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                                <!--上班-->
                                <Frame Style="{StaticResource buttonframe}">
                                    <!--上班按鈕陰影-->
                                    <Button x:Name="workOn"  ImageSource="worker.png"  Style="{StaticResource button}" Clicked="GoToWork"></Button>
                                    <!--上班按鈕-->
                                </Frame>
                                <Label x:Name="workOnText"  Text="上班" Style="{StaticResource text}"></Label>
                                <!--上班文字-->
                            </StackLayout>
                            <StackLayout Grid.Row="0" Grid.Column="1">
                                <!--下班-->
                                <Frame Style="{StaticResource buttonframe}">
                                    <!--下班按鈕陰影-->
                                    <Button x:Name="workOff"  ImageSource="workeroff.png" Style="{StaticResource button}" Clicked="OffWork"></Button>
                                    <!--下班按鈕-->
                                </Frame>
                                <Label  x:Name="workOffText"  Text="下班" Style="{StaticResource text}"></Label>
                                <!--下班文字-->
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Grid.Row="5"  Orientation="Horizontal">
                            <!--公出.更多水平放置-->
                            <StackLayout  Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                                <Frame Style="{StaticResource buttonframe}">
                                    <!--公出按鈕陰影-->
                                    <Button x:Name="GoOut" ImageSource="goout2.png" Style="{StaticResource button}"    Clicked="GoOutButton"></Button>
                                    <!--公出按鈕-->
                                </Frame>
                                <Label Text="公出" Style="{StaticResource text}" ></Label>
                                <!--公出文字-->
                            </StackLayout>
                            <StackLayout Grid.Row="0" Grid.Column="1" >
                                <Frame Style="{StaticResource buttonframe}" >
                                    <!--更多按鈕陰影-->
                                    <Button ImageSource="more1"  Style="{StaticResource button}" st:Transition.Name="transitionMore" Clicked="DetailButton" ></Button>
                                    <!--更多按鈕-->
                                </Frame>
                                <Label Text="更多" Style="{StaticResource text}"></Label>
                                <!--更多文字-->
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Frame>
                <Frame x:Name="FrameConnection" Opacity="0" Style="{StaticResource warningframe}">
                    <!--沒網路時顯示外框-->
                    <Label x:Name="LabelConnection" Opacity="0" Text="No Internet Connection" Style="{StaticResource warning}"></Label>
                    <!--沒網路時顯示文字-->
                </Frame>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>